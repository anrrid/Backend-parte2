<head>
	<meta charset="UTF-8" />
	<meta http-equiv="X-UA-Compatible" content="IE=edge" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0" />
	<title>Chat</title>
	<link rel="shortcut icon" href="../../img/jazmin.png" />
	<link rel="stylesheet" href="../css/style.css" />
	<link rel="stylesheet" href="../css/chat.css" />
</head>
<body>
	<div class="outer-container">
		<div class="mensajes">
      <div class="mensajes-container">

        <h2 class="subtitulo" style="margin-top: 0;">Escribi una pregunta. Busca lo que queres saber!</h2>

        <% if(mensajes.length) { %>
            <% mensajes.forEach(mensaje=> { %>
              <div class="mensaje">
                <div class="img-container">
                  <img src="<%= mensaje.author.avatar %>" alt="Not Found" />
                </div>
                <div>
                  <p><%= mensaje.author.id %> :</p>
                </div>
                <div>
                  <p><%= mensaje.text.text %></p>
                  <p><%= new Date(Date.parse(mensaje.text.hora)).toLocaleString() %></p>
                </div>
              </div>
            <% }); %>
        <% } else { %>
          <div class="error">
            <p>No se encontraron Mensajes</p>
          </div>
        <% } %>
      </div>
    </div>
	</div>
</body>